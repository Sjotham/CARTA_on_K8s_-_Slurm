{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "moduleDetection": "force",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "rootDir": "src"
    },
    "include": ["src/**/*"]
  }
  